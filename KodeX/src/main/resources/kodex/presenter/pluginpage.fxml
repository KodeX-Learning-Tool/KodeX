<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane styleClass="default-root" stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <AnchorPane styleClass="default-page" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <Label styleClass="default-page-title" text="Plugins">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <Region styleClass="plugin__spring" />
                  <TableView fx:id="pluginTable" focusTraversable="false" styleClass="plugin__table">
                    <columns>
                      <TableColumn id="activColumn" fx:id="checkBoxColumn" reorderable="false" text="Aktiv" />
                      <TableColumn id="nameColumn" fx:id="nameColumn" editable="false" text="Name" />
                        <TableColumn fx:id="descriptionColumn" editable="false" text="Beschreibung" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <Region styleClass="plugin__spring" />
                  <HBox styleClass="plugin__button__container">
                     <children>
                        <Button id="plugin-menu__button--add" mnemonicParsing="false" onAction="#handleAddPlugin" styleClass="default-button--shadow" text="Hinzufügen">
                           <graphic>
                              <FontIcon iconLiteral="mdi-playlist-plus" iconSize="20" />
                           </graphic>
                        </Button>
                        <Region styleClass="plugin__button__spring" />
                        <Button id="plugin-menu__button--remove" mnemonicParsing="false" onAction="#handleRemovePlugin" styleClass="default-button--shadow" text="Entfernen">
                           <graphic>
                              <FontIcon iconLiteral="mdi-playlist-minus" iconSize="20" text="" />
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
