<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane styleClass="default-page" stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.kit.uzidy.Prototype.PluginMenuPresenter">
   <children>
      <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <center>
            <TableView fx:id="pluginTable" focusTraversable="false" styleClass="plugin-menu__table" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn id="activColumn" fx:id="checkBoxColumn" maxWidth="50.0" minWidth="50.0" prefWidth="-1.0" reorderable="false" resizable="false" text="Aktiv" />
                <TableColumn id="nameColumn" fx:id="nameColumn" editable="false" minWidth="80.0" prefWidth="-1.0" resizable="false" text="Name" />
                  <TableColumn fx:id="descriptionColumn" editable="false" minWidth="100.0" prefWidth="-1.0" resizable="false" text="Beschreibung" />
              </columns>
               <BorderPane.margin>
                  <Insets bottom="20.0" left="80.0" right="80.0" top="10.0" />
               </BorderPane.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </center>
         <top>
            <Label styleClass="default-page-title" text="Plugins" BorderPane.alignment="CENTER_LEFT">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <BorderPane.margin>
                  <Insets left="80.0" right="20.0" top="10.0" />
               </BorderPane.margin>
            </Label>
         </top>
         <bottom>
            <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
               <children>
                  <Button id="plugin-menu__button--add" mnemonicParsing="false" onAction="#handleAdd" styleClass="default-button--shadow" text="HinzufÃ¼gen">
                     <font>
                        <Font size="18.0" />
                     </font></Button>
                  <Button id="plugin-menu__button--remove" mnemonicParsing="false" onAction="#handleRemove" styleClass="default-button--shadow" text="Entfernen">
                     <font>
                        <Font size="18.0" />
                     </font></Button>
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
