<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox styleClass="side-menu--mini" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox>
               <styleClass>
                  <String fx:value="side-menu__logo" />
                  <String fx:value="side-menu--mini" />
               </styleClass></HBox>
            <Button mnemonicParsing="false" onAction="#handleIndexPage">
               <graphic>
                  <FontIcon iconLiteral="mdi-home-outline">
                     <styleClass>
                        <String fx:value="side-menu__button" />
                        <String fx:value="side-menu--mini" />
                     </styleClass></FontIcon>
               </graphic>
               <styleClass>
                  <String fx:value="side-menu__button" />
                  <String fx:value="side-menu--mini" />
               </styleClass>
			</Button>
            <Button mnemonicParsing="false" onAction="#handleNetwork">
               <graphic>
                  <FontIcon iconLiteral="mdi-share-variant">
                     <styleClass>
                        <String fx:value="side-menu__button" />
                        <String fx:value="side-menu--mini" />
                     </styleClass></FontIcon>
               </graphic>
               <styleClass>
                  <String fx:value="side-menu__button" />
                  <String fx:value="side-menu--mini" />
               </styleClass></Button>
            <Button mnemonicParsing="false" onAction="#handleSettings">
               <graphic>
                  <FontIcon iconLiteral="mdi-settings">
                     <styleClass>
                        <String fx:value="side-menu__button" />
                        <String fx:value="side-menu--mini" />
                     </styleClass></FontIcon>
               </graphic>
               <styleClass>
                  <String fx:value="side-menu__button" />
                  <String fx:value="side-menu--mini" />
               </styleClass></Button>
            <Button mnemonicParsing="false" onAction="#handlePlugins">
               <graphic>
                  <FontIcon iconLiteral="mdi-code-tags">
                     <styleClass>
                        <String fx:value="side-menu__button" />
                        <String fx:value="side-menu--mini" />
                     </styleClass></FontIcon>
               </graphic>
               <styleClass>
                  <String fx:value="side-menu__button" />
                  <String fx:value="side-menu--mini" />
               </styleClass></Button>
            <Button mnemonicParsing="false" onAction="#handleHelp">
               <graphic>
                  <FontIcon iconLiteral="mdi-help-circle-outline">
                     <styleClass>
                        <String fx:value="side-menu__button" />
                        <String fx:value="side-menu--mini" />
                     </styleClass></FontIcon>
               </graphic>
               <styleClass>
                  <String fx:value="side-menu__button" />
                  <String fx:value="side-menu--mini" />
               </styleClass></Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
