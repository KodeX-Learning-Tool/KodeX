<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<fx:root styleClass="chainlink" stylesheets="@style.css" type="BorderPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <BorderPane fx:id="chainLinkPane">
         <center>
            <ScrollPane hbarPolicy="NEVER" styleClass="chainlink__scrollbar" BorderPane.alignment="CENTER">
               <content>
                  <BorderPane fx:id="chainLinkContainer">
                     <top>
                        <BorderPane BorderPane.alignment="CENTER">
                           <left>
                              <Label fx:id="titleLabel" text="Eingabe" BorderPane.alignment="CENTER" />
                           </left>
                           <right>
                              <Button fx:id="editButton" mnemonicParsing="false" onAction="#handleEdit" styleClass="default-button--shadow" BorderPane.alignment="CENTER">
                                 <graphic>
                                    <FontIcon iconLiteral="mdi-lead-pencil" />
                                 </graphic>
                              </Button>
                           </right>
                        </BorderPane>
                     </top>
                     <bottom>
                        <TitledPane fx:id="informationTitledPane" animated="false" styleClass="chainlink__info" text="Informationen:" BorderPane.alignment="CENTER">
                           <content>
                              <VBox>
                                 <children>
                                    <BorderPane>
                                       <center>
                                          <ScrollPane fitToWidth="true">
                                             <content>
                                                <BorderPane fx:id="informationBox" />
                                             </content>
                                          </ScrollPane>
                                       </center>
                                    </BorderPane>
                                    <Region />
                                    <BorderPane>
                                       <right>
                                          <Button fx:id="exportButton" mnemonicParsing="false" onAction="#handleExport" styleClass="default-button--shadow" text="Exportieren" BorderPane.alignment="CENTER" />
                                       </right>
                                    </BorderPane>
                                 </children>
                              </VBox>
                           </content>
                        </TitledPane>
                     </bottom>
                     <center>
                        <ScrollPane styleClass="chainlink__content__scrollbar" BorderPane.alignment="CENTER">
                           <content>
                              <BorderPane />
                           </content>
                        </ScrollPane>
                     </center>
                  </BorderPane>
               </content>
            </ScrollPane>
         </center>
      </BorderPane>
   </center>
   <bottom>
      <BorderPane fx:id="hiddenPane" BorderPane.alignment="CENTER">
         <center>
            <Group>
               <children>
                  <Label fx:id="hiddenLabel" styleClass="chainlink__hidden-label" />
               </children>
            </Group>
         </center>
      </BorderPane>
   </bottom>
   <top>
      <BorderPane BorderPane.alignment="CENTER">
         <right>
            <Button mnemonicParsing="false" onAction="#handleHideChainLink" styleClass="default-button--shadow" BorderPane.alignment="CENTER">
               <graphic>
                  <FontIcon fx:id="hideButtonIcon" iconLiteral="mdi-chevron-right" />
               </graphic>
            </Button>
         </right>
      </BorderPane>
   </top>
</fx:root>
