<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<fx:root type="AnchorPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleHide">
               <graphic>
                  <FontIcon fx:id="hideButtonIcon" iconLiteral="mdi-chevron-right" />
               </graphic>
            </Button>
            <Region prefHeight="50.0" />
            <BorderPane fx:id="chainLinkPane" prefHeight="200.0" prefWidth="200.0">
               <top>
                  <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                     <children>
                        <Label fx:id="titleLabel" text="Eingabe" />
                        <Region />
                        <Button mnemonicParsing="false" onAction="#handleEdit">
                           <graphic>
                              <FontIcon iconLiteral="mdi-lead-pencil" />
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
               </top>
               <bottom>
                  <TitledPane fx:id="informationPane" animated="false" text="Informationen:" BorderPane.alignment="CENTER">
                    <content>
                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                  </TitledPane>
               </bottom>
            </BorderPane>
         </children>
      </VBox>
   </children>
</fx:root>
