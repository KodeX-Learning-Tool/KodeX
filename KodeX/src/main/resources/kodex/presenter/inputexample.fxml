<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<fx:root stylesheets="@style.css" type="AnchorPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox styleClass="input-area">
         <children>
            <Label fx:id="inputLabel" text="Text eingeben" />
            <Region />
            <TextArea fx:id="inputTextArea" wrapText="true" />
            <Region />
            <HBox styleClass="input-area__controls">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleInput" styleClass="default-button--shadow" text="Fertig">
                     <graphic>
                        <FontIcon iconLiteral="mdi-check" iconSize="24" />
                     </graphic>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</fx:root>
